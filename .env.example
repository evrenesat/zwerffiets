# App secrets
APP_SIGNING_SECRET=replace-with-strong-random-secret

# API runtime
APP_ENV=development
GIN_ADDR=:8080
PUBLIC_BASE_URL=https://zwerffiets.org
DATA_ROOT=/var/lib/zwerffiets
MAX_LOCATION_ACCURACY_M=3000

# Postgres (use DATABASE_URL or PG*/POSTGRES_* variables)
# DATABASE_URL=postgres://zwerffiets:change-me@127.0.0.1:5432/zwerffiets?sslmode=disable
PGHOST=127.0.0.1
PGPORT=5432
PGDATABASE=zwerffiets
PGUSER=zwerffiets
PGPASSWORD=change-me
PGSSLMODE=disable

# Optional aliases (both are supported by the API config loader)
# POSTGRES_HOST=127.0.0.1
# POSTGRES_PORT=5432
# POSTGRES_DB=zwerffiets
# POSTGRES_USER=zwerffiets
# POSTGRES_PASSWORD=change-me

# Initial operator bootstrap (MVP scope: operator only)
BOOTSTRAP_OPERATOR_EMAIL=operator@zwerffiets.local
BOOTSTRAP_OPERATOR_PASSWORD=changeme-operator
BOOTSTRAP_OPERATOR_ROLE=operator

# Export notifications
EXPORT_EMAIL_TO=ops@zwerffiets.local

# Frontend local development
DEV_API_PROXY_TARGET=http://127.0.0.1:8080

# Geocoding
MAPBOX_ACCESS_TOKEN=
# Provider: mapbox, nominatim, or leave empty for fallback (mapbox -> nominatim)
GEOCODER_PROVIDER=
